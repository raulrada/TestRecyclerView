<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/list_item_margin_bottom"
    android:layout_marginEnd="@dimen/list_item_margin_end"
    android:layout_marginStart="@dimen/list_item_margin_start"
    android:layout_marginTop="@dimen/list_item_margin_top"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/list_item_index"
        style="@style/TextStyle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/list_text_view_large_margin_bottom"
        android:layout_marginEnd="@dimen/list_text_view_large_margin_end"
        android:layout_marginStart="@dimen/list_text_view_large_margin_start"
        android:layout_marginTop="@dimen/list_text_view_large_margin_top"
        android:gravity="center_vertical"
        android:textSize="@dimen/list_text_view_large_text_size"
        tools:text="1" />

    <LinearLayout
        android:layout_width="@dimen/no_width"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_item_country_name"
            style="@style/TextStyle.ListItemRegular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Country 1" />

        <TextView
            android:id="@+id/list_item_country_capital"
            style="@style/TextStyle.ListItemRegular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Capital 1" />

    </LinearLayout>

</LinearLayout>

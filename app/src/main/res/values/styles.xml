<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- text style to be applied throughout the app -->
    <style name="TextStyle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- text style for the country name and capital elements in list_item.xml -->
    <style name="TextStyle.ListItemRegular">
        <item name="android:layout_marginStart">@dimen/list_text_view_regular_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/list_text_view_regular_margin_end</item>
        <item name="android:layout_marginTop">@dimen/list_text_view_regular_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/list_text_view_regular_margin_bottom</item>
        <item name="android:textSize">@dimen/list_text_view_regular_text_size</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- text style for the TextViews in activity_details.xml -->
    <style name="TextStyle.DetailsTextViewRegular">
        <item name="android:layout_marginStart">@dimen/details_text_view_regular_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/details_text_view_regular_margin_end</item>
        <item name="android:layout_marginTop">@dimen/details_text_view_regular_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/details_text_view_regular_margin_bottom
        </item>
        <item name="android:textSize">@dimen/details_text_view_regular_text_size</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
